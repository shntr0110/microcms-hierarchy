---
import '../styles/global.css'

import { SEO } from 'astro-seo'

export interface Props {
  title?: string
  description?: string
  noindex?: boolean
}

const props = Astro.props

const BASE_TITLE = 'Title'
const title = props.title ? `${props.title} | ${BASE_TITLE}` : BASE_TITLE

const BASE_DESCRIPTION = 'Base description'
const description = props.description ?? BASE_DESCRIPTION
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="format-detection" content="email=no,telephone=no,address=no" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      description={description}
      noindex={props.noindex ?? false}
      openGraph={{
        basic: {
          title,
          type: 'website',
          image: '/ogp.png'
        },
        optional: {
          description: description,
          locale: 'ja_JP'
        }
      }}
      extend={{
        link: [
          { rel: 'icon', href: '/favicon.ico', sizes: '32x32' },
          { rel: 'icon', href: '/favicon.svg', type: 'image/svg+xml' },
          { rel: 'apple-touch-icon', href: '/apple-touch-icon.png' }
        ],
        meta: [
          { name: 'twitter:card', content: 'summary_large_image' },
          { name: 'twitter:title', content: title },
          { name: 'theme-color', content: '#1c1c1c' }
        ]
      }}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      fetchpriority="high"
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500&display=swap" rel="stylesheet" />
    </noscript>
    <script>
      import '@/scripts/global.ts'
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
